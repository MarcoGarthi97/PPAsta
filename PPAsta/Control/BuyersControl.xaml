<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="PPAsta.Control.BuyersControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Riga superiore con TextBox + ComboBox -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Barra di ricerca -->
            <TextBox Grid.Column="0"
                 Text="{Binding TextResearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 TextChanged="OnTextChanged"
                 Header="Ricerca"
                 PlaceholderText="Ricerca per nome, numero o anno"
                 Margin="0,0,10,0" />

            <!-- ComboBox filtro -->
            <ComboBox Grid.Column="1"
              Header="Anno"
              ItemsSource="{Binding FilterYears}"
              SelectedItem="{Binding SelectedFilter, Mode=TwoWay}"
              />    
        </Grid>

        <!-- DataGrid -->
        <controls:DataGrid Grid.Row="1"
                      ItemsSource="{Binding Buyers}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="{x:Bind SelectionMode, Mode=OneWay}"
                      SelectedItem="{x:Bind SelectedBuyer, Mode=TwoWay}"
                      DoubleTapped="DataGrid_DoubleTapped">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="Nome" Binding="{Binding Name}" />
                <controls:DataGridTextColumn Header="Numero" Binding="{Binding Number}" />
                <controls:DataGridTextColumn Header="Anno" Binding="{Binding Year}" />
            </controls:DataGrid.Columns>
        </controls:DataGrid>
    </Grid>

</UserControl>