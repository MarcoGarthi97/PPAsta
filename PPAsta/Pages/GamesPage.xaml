<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PPAsta.Pages.GamesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PPAsta.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls" 
    xmlns:numberformatting="using:Windows.Globalization.NumberFormatting"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBox Text="{Binding TextResearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     TextChanged="{x:Bind OnTextChanged, Mode=OneWay}"
                     Header="Ricerca"
                     PlaceholderText="Ricerca proprietario o nome gioco"
                     HorizontalAlignment="Stretch" />
            </StackPanel>
        </Grid>

        <controls:DataGrid Grid.Row="2"
            ItemsSource="{Binding Games}"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            Margin="0,10,0,0"
            Sorting="DataGrid_Sorting"
            LoadingRow="DataGrid_LoadingRow">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="Processo" Tag="PaymentProcess" Binding="{Binding PaymentProcess}" />
                <controls:DataGridTextColumn Header="Nome" Tag="Name" Binding="{Binding Name}" />
                <controls:DataGridTextColumn Header="Proprietario" Tag="Owner" Binding="{Binding Owner}" />
                <controls:DataGridTextColumn Header="Prezzo di vendita" Tag="SellingPrice" Binding="{Binding SellingPrice}" />
                <controls:DataGridTextColumn Header="Acquirente" Tag="Buyer" Binding="{Binding Buyer}" />
                <controls:DataGridTextColumn Header="Prezzo d'acquisto" Tag="PurchasePrice" Binding="{Binding PurchasePrice}" />
                <controls:DataGridTextColumn Header="Quota proprietario" Tag="ShareOwner" Binding="{Binding ShareOwner}" />
                <controls:DataGridTextColumn Header="Quota PP" Tag="SharePP" Binding="{Binding SharePP}" />
                <controls:DataGridTextColumn Header="Anno" Tag="Year" Binding="{Binding Year}" />

                <controls:DataGridTemplateColumn Header="Pagamento">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button 
                                Click="PaymentButton_Click"
                                Tag="{Binding}"
                                Margin="5"
                                MinWidth="80">
                                <FontIcon Glyph="&#xE8A5;" />
                            </Button>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

            </controls:DataGrid.Columns>
        </controls:DataGrid>

        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
           HorizontalAlignment="Left" 
           VerticalAlignment="Center" 
           Text="{Binding TotalRecordsText}" 
           x:Name="RecordsCountText"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="PrevButton" Content="Indietro" Click="PrevButton_Click" Margin="0,0,10,0" />
                <TextBlock x:Name="PageInfoText" VerticalAlignment="Center" Text="{Binding PageText}" />
                <Button x:Name="NextButton" Content="Avanti" Click="NextButton_Click" Margin="10,0,0,0" />
            </StackPanel>
        </Grid>
    </Grid>

    <Page.Resources>
        <Style x:Key="WideContentDialogStyle" TargetType="ContentDialog">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentDialog">
                        <Border x:Name="Container">
                            <Grid x:Name="LayoutRoot">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Border x:Name="BackgroundElement"
                                    Background="{ThemeResource ContentDialogBackground}"
                                    BorderBrush="{ThemeResource ContentDialogBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    MinWidth="800"
                                    MaxWidth="1200">
                                    <Grid x:Name="DialogSpace" VerticalAlignment="Stretch">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <ContentControl x:Name="Title"
                                                  Content="{TemplateBinding Title}"
                                                  ContentTemplate="{TemplateBinding TitleTemplate}"
                                                  FontSize="20"
                                                  FontWeight="SemiBold"
                                                  Foreground="{ThemeResource ContentDialogForeground}"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Top"
                                                  MaxHeight="56"
                                                  Margin="24,18,24,0" />
                                        <ScrollViewer x:Name="ContentScrollViewer"
                                                Grid.Row="1"
                                                HorizontalScrollBarVisibility="Disabled"
                                                VerticalScrollBarVisibility="Auto"
                                                IsTabStop="False"
                                                Margin="24,0,24,0">
                                            <ContentPresenter Content="{TemplateBinding Content}"
                                                        ContentTemplate="{TemplateBinding ContentTemplate}" />
                                        </ScrollViewer>
                                        <Grid x:Name="CommandSpace" Grid.Row="2" HorizontalAlignment="Stretch"
                                        VerticalAlignment="Bottom"
                                        Padding="24,24,24,24"
                                        XYFocusKeyboardNavigation="Enabled">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Button x:Name="PrimaryButton"
                                              Content="{TemplateBinding PrimaryButtonText}"
                                              Style="{TemplateBinding PrimaryButtonStyle}"
                                              Grid.Column="1"
                                              Margin="4,0,0,0" />
                                            <Button x:Name="CloseButton"
                                              Content="{TemplateBinding CloseButtonText}"
                                              Style="{TemplateBinding CloseButtonStyle}"
                                              Grid.Column="2"
                                              Margin="4,0,0,0" />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="GameDialog">
            <StackPanel Spacing="12" Padding="16">
                <!-- Prima riga: Nome, Proprietario, Prezzo di vendita -->
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nome -->
                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock Text="Nome" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox Text="{Binding Name}" IsReadOnly="True" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    </StackPanel>

                    <!-- Proprietario -->
                    <StackPanel Grid.Column="1" Spacing="4">
                        <TextBlock Text="Proprietario" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox Text="{Binding Owner}" IsReadOnly="True" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    </StackPanel>

                    <!-- Prezzo di vendita -->
                    <StackPanel Grid.Column="2" Spacing="4">
                        <TextBlock Text="Prezzo di vendita" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox Text="{Binding SellingPrice}" IsReadOnly="True" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    </StackPanel>
                </Grid>

                <!-- Campo testo con bottone ricerca -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Ricerca" FontWeight="SemiBold" FontSize="14"/>
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding Buyer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Inserisci testo..."/>
                        <Button Grid.Column="1" Width="40" Height="40" VerticalAlignment="Stretch">
                            <FontIcon Glyph="&#xE721;" FontSize="16"/>
                        </Button>
                    </Grid>
                </StackPanel>

                <!-- Prezzo d'acquisto (numerico con virgola) -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Prezzo d'acquisto" FontWeight="SemiBold" FontSize="14"/>
                    <NumberBox Value="{Binding PurchasePrice, Mode=TwoWay}" 
                       SpinButtonPlacementMode="Inline"
                       SmallChange="0.01"
                       LargeChange="1"/>
                </StackPanel>

                <!-- Quota proprietario (numerico con virgola) -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Quota proprietario" FontWeight="SemiBold" FontSize="14"/>
                    <NumberBox Value="{Binding ShareOwner, Mode=TwoWay}" 
                       SpinButtonPlacementMode="Inline"
                       SmallChange="0.01"
                       LargeChange="1"/>
                </StackPanel>

                <!-- Quota PP (numerico con virgola) -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Quota PP" FontWeight="SemiBold" FontSize="14"/>
                    <NumberBox Value="{Binding SharePP, Mode=TwoWay}" 
                       SpinButtonPlacementMode="Inline"
                       SmallChange="0.01"
                       LargeChange="1"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
</Page>
