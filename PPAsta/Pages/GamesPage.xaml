<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PPAsta.Pages.GamesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PPAsta.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls" 
    xmlns:numberformatting="using:Windows.Globalization.NumberFormatting"
    mc:Ignorable="d"
    xmlns:converters="using:PPAsta.Converters"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:PaymentGameProcessToBrushConverter x:Key="PaymentGameProcessToBrushConverter"/>
    </Page.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
             Text="{Binding TextResearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
             TextChanged="{x:Bind OnTextChanged, Mode=OneWay}"
             Header="Ricerca"
             PlaceholderText="Ricerca proprietario o nome gioco"
             Margin="0,0,10,0" />

            <ComboBox Grid.Column="1"
              Header="Anno"
              ItemsSource="{Binding FilterYears}"
              SelectedItem="{Binding SelectedFilter, Mode=TwoWay}"
              SelectionChanged="ComboBoxYears_SelectionChanged"
              PlaceholderText="Seleziona anno" />

            <CheckBox Grid.Column="2"
              x:Name="CheckBoxVisibility"
              IsChecked="{Binding IsVisible, Mode=TwoWay}"
              VerticalAlignment="Bottom"
              Content="Rendi visibili solo quelli non venduti"
              Margin="10,0,0,0"
              Click="CheckBoxIsVisible_Click" />
        </Grid>


        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Button x:Name="ExportButton" 
            Content="Esporta" 
            Click="ExportButton_Click"
            HorizontalAlignment="Right">
            </Button>
        </Grid>

        <controls:DataGrid Grid.Row="2"
            ItemsSource="{Binding Games}"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            Margin="0,10,0,0"
            Sorting="DataGrid_Sorting">
            <controls:DataGrid.Columns>
                <controls:DataGridTemplateColumn Header="Processo" Tag="PaymentProcess">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Ellipse Width="16" Height="16"
                     Fill="{Binding PaymentProcess, Converter={StaticResource PaymentGameProcessToBrushConverter}}"
                     Stroke="Black"
                     StrokeThickness="0.5"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
                <controls:DataGridTextColumn Header="Nome" Tag="Name" Binding="{Binding Name}" />
                <controls:DataGridTextColumn Header="Proprietario" Tag="Owner" Binding="{Binding Owner}" />
                <controls:DataGridTextColumn Header="Prezzo di vendita" Tag="SellingPrice" Binding="{Binding SellingPrice}" />
                <controls:DataGridTextColumn Header="Acquirente" Tag="Buyer" Binding="{Binding Buyer}" />
                <controls:DataGridTextColumn Header="Prezzo d'acquisto" Tag="PurchasePrice" Binding="{Binding PurchasePrice}" />
                <controls:DataGridTextColumn Header="Quota proprietario" Tag="ShareOwner" Binding="{Binding ShareOwner}" />
                <controls:DataGridTextColumn Header="Quota PP" Tag="SharePP" Binding="{Binding SharePP}" />
                <controls:DataGridTextColumn Header="Anno" Tag="Year" Binding="{Binding Year}" />

                <controls:DataGridTemplateColumn Header="Pagamento">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button 
                                Click="PaymentButton_Click"
                                Tag="{Binding}"
                                Margin="5"
                                MinWidth="80">
                                <FontIcon Glyph="&#xE8A5;" />
                            </Button>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

            </controls:DataGrid.Columns>
        </controls:DataGrid>

        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
           HorizontalAlignment="Left" 
           VerticalAlignment="Center" 
           Text="{Binding TotalRecordsText}" 
           x:Name="RecordsCountText"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="PrevButton" Content="Indietro" Click="PrevButton_Click" Margin="0,0,10,0" />
                <TextBlock x:Name="PageInfoText" VerticalAlignment="Center" Text="{Binding PageText}" />
                <Button x:Name="NextButton" Content="Avanti" Click="NextButton_Click" Margin="10,0,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
