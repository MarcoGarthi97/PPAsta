<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PPAsta.Pages.SellerHandlePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PPAsta.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:numberformatting="using:Windows.Globalization.NumberFormatting"
    xmlns:converters="using:PPAsta.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:SellerProcessToBrushConverter x:Key="SellerProcessToBrushConverter"/>
        <converters:PaymentTypeEnumToTextConverter x:Key="PaymentTypeConverter"/>
    </Page.Resources>

    <Grid Padding="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- BACK BUTTON -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
            <Button Width="40" Height="40"
                Background="Transparent"
                BorderBrush="Transparent"
                ToolTipService.ToolTip="Torna indietro"
                Click="BackButton_Click">
                <FontIcon Glyph="&#xE72B;" FontSize="18"/>
            </Button>

            <TextBlock Text="Dettagli Pagamento"
                   FontSize="22"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"/>
        </StackPanel>

        <!-- HEADER DATA -->
        <ScrollViewer Grid.Row="1" Margin="0,16,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="12" Padding="8,0,8,16">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock Text="Venditore" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox Text="{Binding Owner, Mode=OneWay}"
                             IsReadOnly="True"
                             Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Spacing="4">
                        <TextBlock Text="Anno" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox Text="{Binding Year, Mode=OneWay}"
                             IsReadOnly="True"
                             Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Spacing="4">
                        <TextBlock Text="Totale" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox Text="{Binding TotalPrice, Mode=OneWay}"
                             IsReadOnly="True"
                             Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- SEARCH BAR -->
        <Grid Grid.Row="2" Margin="0,10,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Barra di ricerca -->
            <TextBox Grid.Row="0"
         Text="{Binding TextResearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
         TextChanged="{x:Bind OnTextChanged, Mode=OneWay}"
         Header="Ricerca"
         PlaceholderText="Ricerca proprietario o nome gioco"
         HorizontalAlignment="Stretch"/>

            <!-- Bottoni azione -->
            <Grid Grid.Row="1" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
            Click="SelectAllButton_Click"
            Style="{ThemeResource AccentButtonStyle}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE73A;" FontSize="16"/>
                            <TextBlock Text="Seleziona tutti"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button Grid.Column="2"
            Click="PaymentButton_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Pagamento"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>


        <!-- DATA GRID -->
        <controls:DataGrid Grid.Row="3"
                       x:Name="GamesDataGrid"
                       ItemsSource="{Binding Games}"
                       AutoGenerateColumns="False"
                       IsReadOnly="True"
                       Margin="0,10,0,0"
                       Sorting="DataGrid_Sorting"
                       PointerPressed="DataGrid_PointerPressed"
                       SelectionMode="Single">

            <controls:DataGrid.Columns>

                <controls:DataGridTemplateColumn Header="" Width="40">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <controls:DataGridTemplateColumn Header="Processo" Tag="PaymentSellerProcess">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Ellipse Width="16" Height="16"
                                 Fill="{Binding PaymentSellerProcess, Converter={StaticResource SellerProcessToBrushConverter}}"
                                 Stroke="Black"
                                 StrokeThickness="0.5"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <controls:DataGridTextColumn Header="Nome" Tag="Name" Binding="{Binding Name}" />
                <controls:DataGridTextColumn Header="Proprietario" Tag="Owner" Binding="{Binding Owner}" />
                <controls:DataGridTextColumn Header="Prezzo di vendita" Tag="SellingPrice" Binding="{Binding SellingPrice}" />
                <controls:DataGridTextColumn Header="Quota proprietario" Tag="ShareOwner" Binding="{Binding ShareOwner}" />
                <controls:DataGridTextColumn 
                Header="Tipo pagamento" 
                Tag="PaymentType" 
                Binding="{Binding PaymentType, Converter={StaticResource PaymentTypeConverter}}" />
                <controls:DataGridTemplateColumn Header="Rimuovi pagamento">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button 
                            Click="DeletePaymentButton_Click"
                            Tag="{Binding}"
                            Margin="5"
                            MinWidth="80">
                                <FontIcon Glyph="&#xecc9;" />
                            </Button>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
            </controls:DataGrid.Columns>
        </controls:DataGrid>

        <!-- PAGINATION -->
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Text="{Binding TotalRecordsText}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="PrevButton" Content="Indietro" Click="PrevButton_Click" Margin="0,0,10,0"/>
                <TextBlock x:Name="PageInfoText" VerticalAlignment="Center" Text="{Binding PageText}"/>
                <Button x:Name="NextButton" Content="Avanti" Click="NextButton_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

    </Grid>
</Page>
